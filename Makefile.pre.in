test:		all platform
		-find $(srcdir)/Lib -name '*.py[co]' -print | xargs rm -f
		-PYTHONPATH= $(TESTPYTHON) $(TESTPROG) $(TESTOPTS)
		PYTHONPATH= $(TESTPYTHON) $(TESTPROG) $(TESTOPTS)

