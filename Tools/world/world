while ($addr = shift @ARGV) {
    ($_) = $addr =~ /\.(.*)$/;
    $_ = $addr if !$_;

    if ($nameorg{$_}) {
	# its one of the `special' USA organizational domains
	print "$addr is a USA $nameorg{$_} organization\n";
    }
    elsif ($country{$_}) {
	# its a country code
	print "$addr originated from $country{$_}\n";
    }
    else {
	# who knows?
	print "I have no idea where $addr came from!\n";
    }
}
