# Test for incorrect "double evaluation" semantics

test while-7.1 {delayed substitution of body} -body {
    set i 0
    while {[incr i] < 10} "
       set result $i
    "
    proc p {} {
	set i 0
	while {[incr i] < 10} "
	    set result $i
	"
	return $result
    }
    append result [p]
} -cleanup {
    unset result i
} -result {00}

